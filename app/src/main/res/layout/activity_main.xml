<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myapplication.MainActivity">


    <ImageView
        android:src="@drawable/jay"
        android:id="@+id/jay"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:scaleType="fitCenter"
        android:layout_below="@+id/jay_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:src="@drawable/jay_1"
        android:id="@+id/jay_1"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:layout_below="@id/jay"
        android:layout_alignParentLeft="true" />
    <ImageView
        android:src="@drawable/jay_2"
        android:id="@+id/jay_2"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:layout_below="@id/jay"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/jay_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jay Chou"
        android:textSize="45dp"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#D50000"
        android:text="Taiwan"
        android:textStyle="bold"
        android:id="@+id/text1"
        android:layout_above="@+id/text2"
        android:layout_alignRight="@+id/text2"
        android:layout_alignEnd="@+id/text2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#D50000"
        android:textStyle="bold"
        android:text="Musical genius"
        android:id="@+id/text2"
        android:layout_above="@+id/text3"
        android:layout_alignRight="@+id/text3"
        android:layout_alignEnd="@+id/text3" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#D50000"
        android:textStyle="bold"
        android:text="Style:Pop music"
        android:id="@+id/text3"
        android:layout_above="@+id/text4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#D50000"
        android:textStyle="bold"
        android:text="https://en.wikipedia.org/wiki/Jay_Chou"
        android:id="@+id/text4"
        android:layout_above="@+id/jay_1"
        android:layout_alignRight="@+id/text3"
        android:layout_alignEnd="@+id/text3" />
</RelativeLayout>
